<!-- Search Podcasts tab -->
<div id="search-tab-container" class="tab"></div>

<section id="tabs" role="region">
  <ul role="tablist" data-items="2" class="bottom">
    <li id="podcasts-tab" role="tab">
      <a href="#podcasts-tab" class="active"><%= l('Podcasts') %></a>
      <div role="tabpanel"></div>
    </li>
    <!-- ON HOLD UNTIL WE FIND A GOOD TOP PODCASTS DIRECTORY
    <li id="popular-tab" role="tab">
      <a href="#popular-tab"><%= l('Popular') %></a>
      <div role="tabpanel"></div>
    </li>
    -->
    <li id="search-tab" role="tab">
      <a href="#search-tab"><%= l('Search') %></a>
      <div role="tabpanel"></div>
    </li>
  </ul>
</section>
