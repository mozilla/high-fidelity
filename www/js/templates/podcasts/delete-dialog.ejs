<form id="modal-dialog" role="dialog" data-type="confirm">
  <section>
    <h1><%= l('Delete podcast') %></h1>
    <p>
      <% if (imageURL) { %>
        <img alt="<%= l('Podcast cover') %>" src="<%= imageURL %>">
      <% } %>
      <strong><%= podcast.get('name') %></strong>
      <% if (podcast.get('description')) { %>
        <small></small>
      <% } %>
    </p>
    <p><%= l('Are you sure you want to delete this podcast?') %></p>
  </section>
  <menu>
    <button data-action="cancel"><%= l('Cancel') %></button>
    <button class="danger" data-action="confirm"><%= l('Delete') %></button>
  </menu>
</form>
