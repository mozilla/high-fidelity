<form id="podcast-search-form" action="#search/query">
  <p>
    <input id="podcast-search" type="text" required="" placeholder="<%= l('Enter a podcast name') %>" value="<%= search %>">
    <button type="reset"><%= l('Clear') %></button>

    <button id="podcast-search-submit" class="actions recommend"><%= l('Find Podcast') %></button>
  </p>
</form>

<% if (search) { %>
  <section data-type="list" id="search-results" class="search-results skin-dark">
    <header><%= l('Search Results') %></header>

    <ul>
      <% if (noResults) { %>
        <li><p><%= l('No podcasts found.') %></p></li>
      <% } else { %>
        <li class="loading"><progress></progress><p><%= l('Looking for podcastsâ€¦') %></p></li>
      <% } %>
    </ul>
  </section>
<% } %>
