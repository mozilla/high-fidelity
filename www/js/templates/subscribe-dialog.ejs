<form id="modal-dialog" role="dialog" data-type="confirm">
  <section>
    <h1>Subscribe to podcast</h1>
    <p>
      <% if (imageURL) { %>
        <img alt="Podcast Icon" src="<%= imageURL %>">
      <% } %>
      <strong><%= name %></strong>
      <% if (description) { %>
        <small></small>
      <% } %>
    </p>
    <p>Subscribe to this podcast?</p>
  </section>
  <menu>
    <button data-action="cancel">Cancel</button>
    <button class="recommend" data-action="confirm">Subscribe</button>
  </menu>
</form>
